#include "iostream"
using namespace std;

int main()
{
	int a, b, max1,max2; cin >> a;
	long long int c;
	int mas_a[1000000];
	int mas_b[1000000];
	c = 0;
	for (int i = 0; i < a; i++) {
		cin >> mas_a[i];
		c = c + mas_a[i];
	}
	for (int i = 0; i < a; i++) {
		cin >> mas_b[i];
	}
	max1 = mas_b[1];
	max2 = mas_b[0];
	for (int i = 0; i < a; i++) {
		if (max1<mas_b[i]) {
			max1 = mas_b[i];
		}
	}
	for (int i = 0; i < a; i++) {
		if ((max2<mas_b[i])&&(mas_b[i] != max1)) {
			if (mas_b[i] != max2) {
				max2 = mas_b[i];
			}
		}
	}
	if ((max1 + max2) >= c) {
		cout << "YES";
	}
	else {
		cout << "NO";
	}

    return 0;
}
