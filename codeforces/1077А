#include <iostream>
using namespace std;

int main()
{
	long long int t, a, b, k, output;
	cin >> t;

	for (int i = 0; i < t; i++) {
		cin >> a >> b >> k;
		if (k % 2 == 0) {
			output = a * (k / 2) - b * (k / 2);
		}
		else {
			output = a * (k / 2 + 1) - b * (k / 2);
		}
		cout << output << endl;
	}
    return 0;
}
